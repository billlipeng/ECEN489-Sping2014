<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
   android:orientation="vertical"
   android:layout_width="fill_parent"
   android:layout_height="fill_parent"
   android:layout_marginTop="10dip"
   android:paddingLeft="16dp"
   android:paddingRight="16dp"
   >

<TextView
    android:id="@+id/status_label"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/status_label"
    />
<TextView 
   android:id="@+id/ip_label"
   android:layout_width="wrap_content"
   android:layout_height="wrap_content"
   android:layout_below="@id/status_label"
   android:text="@string/ip_label"	
 	/>
<TextView 
   android:id="@+id/ssid_label"
   android:layout_width="wrap_content"
   android:layout_height="wrap_content"
   android:layout_below="@id/ip_label"
   android:text="@string/ssid_label"	   
 	/>
<TextView 
   android:id="@+id/mac_label"
   android:layout_width="wrap_content"
   android:layout_height="wrap_content"
   android:layout_below="@id/ssid_label"
   android:text="@string/mac_label"	
 	/>
<TextView 
   android:id="@+id/speed_label"
   android:layout_width="wrap_content"
   android:layout_height="wrap_content"
   android:layout_below="@id/mac_label"
   android:text="@string/speed_label"	
 	/>
<TextView 
   android:id="@+id/rssi_label"
   android:layout_width="wrap_content"
   android:layout_height="wrap_content"
   android:layout_below="@id/speed_label"
   android:text="@string/rssi_label"	
 	/>

<TextView 
   android:id="@+id/status"
   android:layout_width="wrap_content"
   android:layout_height="wrap_content"
   android:layout_toRightOf="@id/status_label"
   android:layout_alignBaseline="@id/status_label"
   	/>
<TextView 
   android:id="@+id/ip"
   android:layout_width="wrap_content"
   android:layout_height="wrap_content"
   android:layout_toRightOf="@id/ip_label"
   android:layout_alignBaseline="@id/ip_label"
   	/>
<TextView 
   android:id="@+id/ssid"
   android:layout_width="wrap_content"
   android:layout_height="wrap_content"
   android:layout_toRightOf="@id/ssid_label"
   android:layout_alignBaseline="@id/ssid_label"
    />
<TextView 
   android:id="@+id/mac"
   android:layout_width="wrap_content"
   android:layout_height="wrap_content"
   android:layout_toRightOf="@id/mac_label"
   android:layout_alignBaseline="@id/mac_label"
    />
<TextView 
   android:id="@+id/speed"
   android:layout_width="wrap_content"
   android:layout_height="wrap_content"
   android:layout_toRightOf="@id/speed_label"
   android:layout_alignBaseline="@id/speed_label"
    />
<TextView 
   android:id="@+id/rssi"
   android:layout_width="wrap_content"
   android:layout_height="wrap_content"
   android:layout_toRightOf="@id/rssi_label"
   android:layout_alignBaseline="@id/rssi_label"
    />
</RelativeLayout>