<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <Button
        android:id="@+id/ButtonTeam1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:onClick="connectTeam1"
        android:text="@string/ButtonTeam1" />

    <Button
        android:id="@+id/ButtonTeam2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/Button01"
        android:layout_centerHorizontal="true"
        android:onClick="connectTeam2"
        android:text="@string/ButtonTeam2" />

    <Button
        android:id="@+id/ButtonTeam3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ButtonTeam4"
        android:layout_marginLeft="18dp"
        android:layout_toRightOf="@+id/ButtonTeam2"
        android:onClick="connectTeam3"
        android:text="@string/ButtonTeam3" />
    
    <Button
        android:id="@+id/ButtonTeam4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/ButtonTeam1"
        android:layout_below="@+id/ButtonTeam1"
        android:layout_marginTop="27dp"
        android:onClick="connectTeam4"
        android:text="@string/ButtonTeam4" />

    <Button
        android:id="@+id/ButtonTeam5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/ButtonTeam4"
        android:layout_alignBottom="@+id/ButtonTeam4"
        android:layout_alignLeft="@+id/ButtonTeam2"
        android:onClick="connectTeam5"
        android:text="@string/ButtonTeam5" />

    <EditText
        android:id="@+id/edit_IPAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ButtonTeam4"
        android:layout_marginTop="45dp"
        android:layout_toLeftOf="@+id/ButtonTeam3"
        android:hint = "@string/edit_IPAddress"
        android:ems="10" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/edit_PortNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_IPAddress"
        android:layout_marginTop="22dp"
        android:layout_toLeftOf="@+id/ButtonTeam3"
        android:ems="10"
        android:hint="@string/edit_PortNumber"
        android:inputType="number" />

    <Button
        android:id="@+id/button1"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/edit_PortNumber"
        android:layout_below="@+id/edit_PortNumber"
        android:layout_marginTop="28dp"
        android:text="@string/SendServer" />

</RelativeLayout>